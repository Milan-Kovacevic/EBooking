<UserControl
    x:Class="EBooking.WPF.Views.AccommodationsView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:EBooking.WPF.Views"
    xmlns:lex="http://wpflocalizeextension.codeplex.com"
    xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
    xmlns:components="clr-namespace:EBooking.WPF.Components"
    mc:Ignorable="d"
    d:DesignHeight="700"
    d:DesignWidth="1000">
    <Grid
        Background="{DynamicResource MaterialDesignPaper}">
        <Grid
            Margin="10">
            <Grid.RowDefinitions>
                <RowDefinition
                    Height="auto" />
                <RowDefinition
                    Height="auto" />
                <RowDefinition
                    Height="*" />
            </Grid.RowDefinitions>

            <Grid
                Grid.Row="0">
                <TextBlock
                    Text="Accommodations"
                    VerticalAlignment="Center"
                    Foreground="{DynamicResource PrimaryHueLightBrush}"
                    FontWeight="Medium"
                    FontSize="26"
                    Margin="20 5 15 10" />
            </Grid>
            <Button
                Grid.Row="1"
                HorizontalAlignment="Right"
                Margin="5 10 10 10"
                VerticalAlignment="Bottom"
                FontWeight="Regular"
                Width="36"
                Panel.ZIndex="1"
                Height="36"
                Padding="0"
                Visibility="{Binding IsAdmin, Converter={StaticResource BooleanToVisibilityConverter}}"
                Command="{Binding AddAccommodationCommand}"
                materialDesign:ElevationAssist.Elevation="Dp6"
                Style="{DynamicResource MaterialDesignFloatingActionMiniLightButton}">
                <materialDesign:PackIcon
                    Kind="Add"
                    Width="20"
                    Height="20" />
            </Button>
            <StackPanel
                Margin="15 0 15 5"
                Grid.Row="1"
                Orientation="Horizontal"
                HorizontalAlignment="Left">
                <TextBox
                    Width="340"
                    Margin="2 0 2 2"
                    Padding="2 4 4 1"
                    FontSize="15"
                    VerticalContentAlignment="Center"
                    VerticalAlignment="Center"
                    materialDesign:TextFieldAssist.HasClearButton="True"
                    materialDesign:HintAssist.HelperText="Find accommodations.."
                    materialDesign:HintAssist.Hint="Search..."
                    materialDesign:TextFieldAssist.HasLeadingIcon="True"
                    materialDesign:TextFieldAssist.LeadingIcon="Search"
                    materialDesign:TextFieldAssist.LeadingIconSize="23"
                    materialDesign:HintAssist.Background="{DynamicResource SecondaryAccentBrush}"
                    materialDesign:TextFieldAssist.TextBoxViewMargin="0 4 0 5"
                    Text="{Binding SearchText, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                    materialDesign:HintAssist.FloatingOffset="0 -12"
                    Foreground="{DynamicResource SecondaryHueMidBrush}">
                    <TextBox.InputBindings>
                        <KeyBinding
                            Key="Enter"
                            Command="{Binding SearchAccommodationsCommand}" />
                    </TextBox.InputBindings>
                </TextBox>
                <Button
                    Width="42"
                    Panel.ZIndex="1"
                    Height="42"
                    Padding="4"
                    Margin="6 0 0 0"
                    Command="{Binding SearchAccommodationsCommand}"
                    Foreground="{DynamicResource SecondaryHueMidBrush}"
                    Style="{DynamicResource MaterialDesignIconButton}"
                    BorderThickness="0"
                    ToolTip="Search accommodations">
                    <materialDesign:PackIcon
                        Kind="SearchExpand"
                        Width="25"
                        Height="25" />
                </Button>
                <ToggleButton
                    Width="42"
                    x:Name="FilterToggleButton"
                    Panel.ZIndex="1"
                    Height="42"
                    Padding="4"
                    IsEnabled="False"
                    Margin="6 0 0 0"
                    Command="{Binding FilterAccommodationsCommand}"
                    Foreground="{DynamicResource PrimaryHueMidBrush}"
                    Style="{DynamicResource MaterialDesignFlatAccentButton}"
                    BorderThickness="0"
                    ToolTip="Filter items">
                    <materialDesign:PackIcon
                        Kind="FilterVariantPlus"
                        Width="25"
                        Height="25">
                        <materialDesign:PackIcon.Style>
                            <Style
                                TargetType="materialDesign:PackIcon"
                                BasedOn="{StaticResource {x:Type materialDesign:PackIcon}}">
                                <Setter
                                    Property="Kind"
                                    Value="FilterVariantPlus" />
                                <Style.Triggers>
                                    <DataTrigger
                                        Binding="{Binding IsFilterSelected, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                        Value="True">
                                        <Setter
                                            Property="Kind"
                                            Value="FilterVariantMinus" />
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </materialDesign:PackIcon.Style>
                    </materialDesign:PackIcon>
                </ToggleButton>
            </StackPanel>
            <Border
                Padding="12"
                Margin="0 15 0 10"
                Grid.Row="2">
                <ScrollViewer
                    materialDesign:ElevationAssist.Elevation="Dp8"
                    materialDesign:ScrollViewerAssist.IsAutoHideEnabled="True"
                    VerticalScrollBarVisibility="Auto"
                    HorizontalScrollBarVisibility="Disabled">
                    <ItemsControl
                        ItemsSource="{Binding Accommodations, UpdateSourceTrigger=PropertyChanged}">
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <components:AccommodationItemCard
                                    Margin="10 10 10 10" />
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                        <ItemsControl.ItemsPanel>
                            <ItemsPanelTemplate>
                                <WrapPanel />
                            </ItemsPanelTemplate>
                        </ItemsControl.ItemsPanel>
                    </ItemsControl>
                </ScrollViewer>

            </Border>
        </Grid>
    </Grid>
</UserControl>

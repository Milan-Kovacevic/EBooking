<UserControl
    x:Class="EBooking.WPF.Views.AccommodationUnitsView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:EBooking.WPF.Views"
    xmlns:lex="http://wpflocalizeextension.codeplex.com"
    xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
    mc:Ignorable="d"
    d:DesignHeight="700"
    d:DesignWidth="1000">
    <ScrollViewer
        materialDesign:ElevationAssist.Elevation="Dp8"
        materialDesign:ScrollViewerAssist.IsAutoHideEnabled="True"
        HorizontalScrollBarVisibility="Auto"
        VerticalScrollBarVisibility="Auto">
        <Grid
            Background="{DynamicResource MaterialDesignPaper}">
            <materialDesign:Card
                materialDesign:ElevationAssist.Elevation="Dp8"
                UniformCornerRadius="10"
                Padding="10"
                MaxWidth="900"
                MaxHeight="600"
                Margin="25">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition
                            Height="auto" />
                        <RowDefinition
                            Height="auto" />
                        <RowDefinition
                            Height="*" />
                    </Grid.RowDefinitions>
                    <Button
                        Grid.Row="0"
                        Width="32"
                        Height="32"
                        ToolTip="Return back"
                        HorizontalAlignment="Left"
                        VerticalAlignment="Top"
                        Command="{Binding ReturnBackCommand}"
                        Style="{DynamicResource MaterialDesignIconButton}">
                        <materialDesign:PackIcon
                            Kind="ArrowBack" Width="26" Height="26" />
                    </Button>
                    <StackPanel
                        Grid.Row="0"
                        Margin="20 10 20 5"
                        HorizontalAlignment="Center"
                        Orientation="Vertical">
                        <TextBlock
                            FontSize="27"
                            TextWrapping="Wrap"
                            FontWeight="Medium"
                            VerticalAlignment="Center"
                            TextAlignment="Center"
                            Foreground="{DynamicResource PrimaryHueLightBrush}"
                            Style="{DynamicResource MaterialDesignTextBlock}"
                            Text="Accommodation Units" />
                    </StackPanel>
                    <StackPanel Grid.Row="1" Margin="30 25 30 0">
                        <materialDesign:ColorZone
                            Background="Transparent">
                            <StackPanel
                                Orientation="Horizontal">
                                <TextBlock
                                    VerticalAlignment="Center"
                                    HorizontalAlignment="Stretch"
                                    FontSize="13"
                                    FontStyle="Italic"
                                    Text="For: "
                                    Margin="0 0 2 0"
                                    TextWrapping="Wrap" />
                                <TextBlock
                                    VerticalAlignment="Center"
                                    HorizontalAlignment="Stretch"
                                    FontSize="17"
                                    TextDecorations="Underline"
                                    FontWeight="Medium"
                                    Text="{Binding AccommodationName, Mode=OneTime}"
                                    TextWrapping="Wrap" />
                            </StackPanel>
                        </materialDesign:ColorZone>
                        <StackPanel
                            Margin="0 4 0 0"
                            Orientation="Horizontal">
                            <materialDesign:PackIcon
                                Kind="Location"
                                VerticalAlignment="Center"
                                Foreground="{DynamicResource PrimaryHueLightBrush}"
                                Margin="0 0 2 0"
                                Width="18"
                                Height="18" />
                            <TextBlock
                                HorizontalAlignment="Stretch"
                                FontSize="14"
                                FontWeight="Medium"
                                Foreground="{DynamicResource PrimaryHueLightBrush}"
                                Text="{Binding AccommodationAddress, Mode=OneTime}"
                                TextWrapping="Wrap" />
                        </StackPanel>
                        <TextBlock
                            HorizontalAlignment="Stretch"
                            FontSize="14"
                            FontWeight="Medium"
                            Margin="0 2 0 0"
                            Foreground="{DynamicResource PrimaryHueLightBrush}"
                            Text="{Binding AccommodationLocation, Mode=OneTime}"
                            TextWrapping="Wrap" />
                    </StackPanel>
                    <Border
                        Padding="12"
                        Margin="8 6 8 10"
                        Grid.Row="2">
                        <ScrollViewer
                            materialDesign:ScrollViewerAssist.IsAutoHideEnabled="True"
                            VerticalScrollBarVisibility="Auto"
                            HorizontalScrollBarVisibility="Disabled">
                            <ItemsControl
                                ItemsSource="{Binding AccommodationUnits, UpdateSourceTrigger=PropertyChanged}">
                                <ItemsControl.ItemTemplate>
                                    <DataTemplate>
                                        <Border
                                            BorderThickness="2"
                                            BorderBrush="{DynamicResource PrimaryHueLightBrush}"
                                            Margin="8"
                                            Height="180"
                                            Width="220"
                                            CornerRadius="8">
                                            <materialDesign:Card
                                                UniformCornerRadius="8"
                                                materialDesign:ElevationAssist.Elevation="Dp4">
                                                <ScrollViewer
                                                    materialDesign:ScrollViewerAssist.IsAutoHideEnabled="True"
                                                    VerticalScrollBarVisibility="Auto"
                                                    HorizontalScrollBarVisibility="Disabled"
                                                    Grid.Row="2">
                                                    <Border
                                                        Padding="16 10">
                                                        <Grid
                                                            Grid.Row="2">
                                                            <Grid.RowDefinitions>
                                                                <RowDefinition
                                                                    Height="auto" />
                                                                <RowDefinition
                                                                    Height="*" />
                                                                <RowDefinition
                                                                    Height="auto" />
                                                            </Grid.RowDefinitions>
                                                            <StackPanel
                                                                Grid.Row="0"
                                                                Margin="0 4 0 0">
                                                                <materialDesign:ColorZone
                                                                    Background="Transparent">
                                                                    <TextBlock
                                                                        TextWrapping="WrapWithOverflow"
                                                                        FontWeight="Medium"
                                                                        Text="{Binding Name}"
                                                                        FontSize="18" />
                                                                </materialDesign:ColorZone>
                                                            </StackPanel>
                                                            <StackPanel
                                                                VerticalAlignment="Top"
                                                                Margin="2 8 2 4"
                                                                Grid.Row="1">
                                                                <TextBlock
                                                                    Foreground="{DynamicResource PrimaryHueLightBrush}"
                                                                    Text="Availability period:"
                                                                    VerticalAlignment="Center"
                                                                    FontSize="12" />
                                                                <materialDesign:ColorZone
                                                                    Margin="0 4 0 0"
                                                                    Background="Transparent">
                                                                    <WrapPanel
                                                                        Orientation="Horizontal">
                                                                        <materialDesign:PackIcon
                                                                            Kind="CalendarMonth"
                                                                            VerticalAlignment="Center"
                                                                            Margin="0 0 4 0"
                                                                            Width="14"
                                                                            Height="14" />
                                                                        <TextBlock
                                                                            VerticalAlignment="Center"
                                                                            HorizontalAlignment="Stretch"
                                                                            FontSize="12"
                                                                            FontWeight="Medium"
                                                                            Text="07.10.2023. - 07.12.2024."
                                                                            TextWrapping="Wrap" />
                                                                    </WrapPanel>
                                                                </materialDesign:ColorZone>
                                                                <StackPanel
                                                                    Margin="0 4 0 0"
                                                                    Orientation="Horizontal">
                                                                    <TextBlock
                                                                        Foreground="{DynamicResource SecondaryHueMidBrush}"
                                                                        Text="Number of beds:"
                                                                        Margin="0 0 4 0"
                                                                        VerticalAlignment="Center"
                                                                        FontSize="12" />
                                                                    <TextBlock
                                                                        Foreground="{DynamicResource SecondaryHueMidBrush}"
                                                                        FontWeight="Medium"
                                                                        VerticalAlignment="Center"
                                                                        Text="{Binding NumberOfBeds}"
                                                                        FontSize="13" />
                                                                </StackPanel>
                                                                <StackPanel
                                                                    Orientation="Horizontal">
                                                                    <TextBlock
                                                                        Foreground="{DynamicResource SecondaryHueMidBrush}"
                                                                        Text="Unit size:"
                                                                        Margin="0 0 4 0"
                                                                        VerticalAlignment="Center"
                                                                        FontSize="12" />
                                                                    <TextBlock
                                                                        Foreground="{DynamicResource SecondaryHueMidBrush}"
                                                                        FontWeight="Medium"
                                                                        VerticalAlignment="Center"
                                                                        Text="{Binding UnitSize}"
                                                                        FontSize="13" />
                                                                </StackPanel>
                                                            </StackPanel>
                                                            <StackPanel
                                                                Grid.Row="2"
                                                                VerticalAlignment="Center"
                                                                HorizontalAlignment="Left"
                                                                Margin="0 0 0 2"
                                                                Orientation="Horizontal">
                                                                <TextBlock
                                                                    Foreground="{DynamicResource PrimaryHueMidBrush}"
                                                                    Text="Price per night:"
                                                                    Margin="0 0 4 0"
                                                                    VerticalAlignment="Center"
                                                                    FontSize="12" />
                                                                <materialDesign:ColorZone
                                                                    VerticalAlignment="Center"
                                                                    Background="Transparent">
                                                                    <TextBlock
                                                                        FontWeight="Medium"
                                                                        VerticalAlignment="Center"
                                                                        Text="{Binding PricePerNight}"
                                                                        FontSize="13" />
                                                                </materialDesign:ColorZone>
                                                                <materialDesign:PackIcon
                                                                    Kind="Money"
                                                                    VerticalAlignment="Center"
                                                                    Foreground="{DynamicResource PrimaryHueMidBrush}"
                                                                    Margin="2 0 0 0"
                                                                    Width="18"
                                                                    Height="18" />
                                                            </StackPanel>
                                                        </Grid>
                                                    </Border>
                                                </ScrollViewer>
                                            </materialDesign:Card>
                                        </Border>
                                        
                                    </DataTemplate>
                                </ItemsControl.ItemTemplate>
                                <ItemsControl.ItemsPanel>
                                    <ItemsPanelTemplate>
                                        <WrapPanel />
                                    </ItemsPanelTemplate>
                                </ItemsControl.ItemsPanel>
                            </ItemsControl>
                        </ScrollViewer>

                    </Border>
                </Grid>
            </materialDesign:Card>
        </Grid>
    </ScrollViewer>
</UserControl>
